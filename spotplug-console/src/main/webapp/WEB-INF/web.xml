<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<!-- Servlets -->
	<servlet>
		<servlet-name>eventServlet</servlet-name>
		<servlet-class>com.plugtree.spotplug.server.EventServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>eventServlet</servlet-name>
		<url-pattern>/SpotplugConsole/EventService</url-pattern>
	</servlet-mapping>

  <!-- Default page -->
  <welcome-file-list>
    <welcome-file>SpotplugConsole.html</welcome-file>
  </welcome-file-list>

</web-app>

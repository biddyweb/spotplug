# 2nd Fraud Pattern
rule "Transaction at unusual hours"
dialect "mvel"

when
	    $event : BankEvent( callDateTime.hours >= 2,
	                        callDateTime.hours <= 6,
	                        amount > 4000) from entry-point BankEvent
then

    	 actuator.writeOutput(kcontext, hashMap.get($event.userId));
end


# 3th Fraud Pattern
rule "Same BankEvent, same time, everyday"
dialect "mvel" 

when
	$event : BankEvent() from entry-point BankEvent
	BankEvent(callDateTime.day > $event.callDateTime.day,
				 callDateTime.seconds == $event.callDateTime.seconds,
				 callDateTime.minutes == $event.callDateTime.minutes,
				 callDateTime.hours == $event.callDateTime.hours,
				 userId == $event.userId,
				 amount == $event.amount) from entry-point BankEvent 
then
	hashMap.get($event.userId).increaseFraudProbability(60);
	actuator.writeOutput(kcontext, hashMap.get($event.userId));
end



# 4th Fraud Pattern
rule "Incorrect Message Order"
dialect "mvel"

when
	$user : User()
	$e : BankEvent($userId : userId ,userId == $user.id, $tid : transactionID , $sid : sequentialID, $ecdt : callDateTime) from entry-point BankEvent
	BankEvent(userId == $userId,
				 this != $e,transactionID == $tid,
				 sequentialID < $sid,
				 callDateTime.year  == $ecdt.year,			     
				 callDateTime.month  == $ecdt.month,
			     callDateTime.day  == $ecdt.day,
			     callDateTime.hours  == $ecdt.hours,
			     callDateTime.minutes  == $ecdt.minutes,
			     callDateTime.seconds > $ecdt.seconds
			     ) from entry-point BankEvent
then
	#Rechazar transaccion.
	actuator.writeOutput(kcontext, hashMap.get($userId));
end


# 5th Fraud Pattern
rule "Identical transactions"
dialect "mvel" 
when
	$firstEvent : BankEvent() from entry-point BankEvent
	
	BankEvent(this after[0, 30s] $firstEvent,
				 userId == $firstEvent.userId,
				 amount == $firstEvent.amount) from entry-point BankEvent
then
	#Rechazar transaccion.
	actuator.writeOutput(kcontext, hashMap.get($firstEvent.userId));
end


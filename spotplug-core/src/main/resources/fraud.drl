# 7th Fraud Pattern
rule "Too many events in a short period of time"
dialect "mvel" 

when
	$user : User()
	Number($count : intValue, intValue > 3) from accumulate($event : BankEvent(userId == $user.id) over window:time(1m) from entry-point BankEvent , count($event)) 
then
	$user.increaseFraudProbability(20);
	actuator.writeOutput(kcontext, $user);	 
end

import com.plugtree.spotplug.Actuator;

import java.lang.Number;
import java.lang.String;
import java.lang.Long;
import java.lang.Integer;
import java.util.concurrent.ConcurrentHashMap;
import org.drools.runtime.rule.RuleContext;
import java.util.*;

global ConcurrentHashMap hashMap;
global Actuator actuator;
global MailActuator mailActuator;

declare GenericEvent
    @role(event)
    @timestamp(callDateTime.getTime())
    @duration(callDuration)    
end

declare BankEvent
    @role(event)
    @timestamp(callDateTime.getTime())
    @duration(callDuration)      
    userId : String
    sequentialID : long
    transactionID : long
    opCode : long
    amount : int
	callDateTime : Date
	callDuration : long
end

# Converting Generic Events into a BankEvent
rule "Convert GenericEvent into a bank-event"
dialect "mvel"
no-loop
salience 10000

when
	$ge : GenericEvent(eventType == "bank-event") from entry-point GenericEventEntryPoint
then
    BankEvent bankEvent = new BankEvent();
    bankEvent.setAmount(Integer.parseInt($ge.getAttributes().get("amount")));
    bankEvent.setSequentialID(Long.parseLong($ge.getAttributes().get("sequentialID")));
    bankEvent.setTransactionID(Long.parseLong($ge.getAttributes().get("transactionID")));
    bankEvent.setOpCode(Long.parseLong($ge.getAttributes().get("opCode")));

    bankEvent.setCallDateTime($ge.getCallDateTime());
    bankEvent.setCallDuration($ge.getCallDuration());

	bankEvent.setUserId($ge.getAttributes().get("userId"));
	retract($ge);
	entryPoints["BankEvent"].insert(bankEvent);
end

